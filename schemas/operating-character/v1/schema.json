{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://team-earth.github.io/a2a-human-extension/schemas/operating-character/v1/schema.json",
  "title": "Operating Character",
  "description": "Encodes self-declared organizational style, motivation, and interaction patterns using recognized psychological and cultural frameworks. Enables context-aware collaboration and alignment between human-led programs and AI agents.",
  "type": "object",
  "properties": {
    "description": {
      "type": "string",
      "description": "Natural language description of the organization's operating character, values, and approach"
    },
    "spiral_dynamics": {
      "type": "object",
      "description": "Value system distribution based on Spiral Dynamics framework (Graves, Beck, Cowan)",
      "properties": {
        "beige": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Survival-oriented, instinctive"
        },
        "purple": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Tribal, kinship, tradition, rituals"
        },
        "red": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Power, impulse, dominance, assertiveness"
        },
        "blue": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Order, discipline, rules, hierarchy, meaning"
        },
        "orange": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Achievement, success, competition, innovation"
        },
        "green": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Community, equality, consensus, sensitivity"
        },
        "yellow": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Systems thinking, flexibility, integration"
        },
        "turquoise": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Holistic, global, spiritual consciousness"
        },
        "interpretation": {
          "type": "string",
          "description": "Human-readable interpretation of the spiral dynamics profile for context-aware collaboration"
        }
      },
      "additionalProperties": false
    },
    "hofstede_cultural_dimensions": {
      "type": "object",
      "description": "Cultural dimensions based on Hofstede's framework (0-100 scale)",
      "properties": {
        "power_distance": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Acceptance of hierarchical order and unequal power distribution (low: egalitarian, high: hierarchical)"
        },
        "individualism": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Degree of interdependence (low: collectivist, high: individualist)"
        },
        "masculinity": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Preference for achievement vs. caring (low: caring/quality of life, high: competitive/achievement)"
        },
        "uncertainty_avoidance": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Tolerance for ambiguity and uncertainty (low: flexible, high: structured)"
        },
        "long_term_orientation": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Time horizon (low: short-term/traditional, high: long-term/pragmatic)"
        },
        "indulgence": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Gratification of desires (low: restrained, high: indulgent)"
        },
        "interpretation": {
          "type": "string",
          "description": "Human-readable interpretation of the cultural dimensions for context-aware collaboration"
        }
      },
      "additionalProperties": false
    },
    "insights_discovery": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["red", "blue", "yellow", "green"],
          "description": "Simple format: single dominant color (red=direct, blue=analytical, yellow=optimistic, green=supportive)"
        },
        {
          "type": "object",
          "description": "Detailed format: Communication and energy preferences based on Insights Discovery / Jungian types",
          "properties": {
            "primary": {
              "type": "string",
              "enum": ["red", "blue", "yellow", "green"],
              "description": "Primary color energy"
            },
            "secondary": {
              "type": "string",
              "enum": ["red", "blue", "yellow", "green"],
              "description": "Secondary color energy"
            },
            "tertiary": {
              "type": "string",
              "enum": ["red", "blue", "yellow", "green"],
              "description": "Tertiary color energy"
            },
            "minor": {
              "type": "string",
              "enum": ["red", "blue", "yellow", "green"],
              "description": "Minor/least dominant color energy"
            },
            "interpretation": {
              "type": "string",
              "description": "Human-readable interpretation"
            }
          },
          "required": ["primary"],
          "additionalProperties": false
        }
      ]
    },
    "decision_making_style": {
      "type": "string",
      "description": "How the organization makes decisions (e.g., consensus-based, hierarchical, data-driven, participatory)"
    },
    "communication_norms": {
      "type": "string",
      "description": "Preferred communication patterns and expectations"
    },
    "governance_approach": {
      "type": "string",
      "description": "How the organization governs itself and its work"
    },
    "collaboration_preferences": {
      "type": "object",
      "description": "Preferences for how to collaborate with other entities",
      "properties": {
        "meeting_style": {
          "type": "string"
        },
        "decision_tempo": {
          "type": "string",
          "enum": ["fast", "moderate", "deliberate", "slow"]
        },
        "formality_level": {
          "type": "string",
          "enum": ["informal", "semi-formal", "formal", "highly-formal"]
        },
        "feedback_style": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": true
}
